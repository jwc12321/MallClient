<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/backGround8</item>    <!-- 状态栏 -->
        <item name="colorPrimaryDark">@color/backGround8</item> <!-- toolbar -->
        <item name="colorAccent">@color/appText1</item>  <!-- 重点 -->
        <item name="android:typeface">monospace</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!--每个activity的title-->
    <style name="title_red_rl_style">
