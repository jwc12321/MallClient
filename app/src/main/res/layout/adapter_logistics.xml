<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/dp_49"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/up_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_22">

            <ImageView
                android:id="@+id/submit_iv"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/delivery_circle_select" />

            <View
                android:id="@+id/up_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_above="@id/submit_iv"
                android:layout_centerHorizontal="true"
                android:background="@color/backGround15" />
        </RelativeLayout>

        <View
            android:id="@+id/down_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_below="@id/up_rl"
            android:layout_centerHorizontal="true"
            android:background="@color/backGround15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/title"
            style="@style/size15_color_app3_text_style"
            tools:text="退款成功" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/content"
            style="@style/size14_color_app2_text_style"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_32"
            tools:text="简奢已处理完您的退款，预计1-5个工作日原路退回，到账详情往原支付账户查询" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/time"
            style="@style/size15_color_app2_text_style"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_32"
            android:layout_marginBottom="@dimen/dp_30"
            tools:text="07-01  16:00" />
    </LinearLayout>
</LinearLayout>