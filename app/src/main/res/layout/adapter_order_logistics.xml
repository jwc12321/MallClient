<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/backGround57"
    android:orientation="vertical"
    android:id="@+id/item_ll">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_11">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/status"
            style="@style/size14_color_back1_text_style"
            android:layout_marginLeft="@dimen/dp_15"
            tools:text="待收货" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/shipSn"
            style="@style/size12_color_app2_text_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            tools:text="顺丰快递：19746140792074" />
    </RelativeLayout>

    <com.mall.sls.common.widget.textview.ConventionalTextView
        android:id="@+id/statusDesc"
        style="@style/size12_color_app3_text_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_7"
        tools:text="配送员刘正正在派送中" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/goods_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="horizontal"
        app:layoutManager="@string/layoutManager_LinearLayout"
        tools:listitem="@layout/adapter_logistics_goods" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/total_number"
            style="@style/size12_color_app2_text_style"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_9"
            tools:text="共9件商品" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/view_map_bt"
            style="@style/view_map_bt_style"
            android:text="@string/view_map" />
    </RelativeLayout>

</LinearLayout>