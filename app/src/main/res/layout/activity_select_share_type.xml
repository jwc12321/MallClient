<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/common_up_four_app_one_bg"
        android:orientation="vertical">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/share_to"
            android:textColor="@color/appText12"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_23"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wx_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wx_friends" />

            <ImageView
                android:id="@+id/wx_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_91"
                android:src="@mipmap/icon_wx_circle_friends" />
        </LinearLayout>

        <View
            style="@style/back_nine_line_style"
            android:layout_marginTop="@dimen/dp_15" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/cancel_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/appText2"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</RelativeLayout>