<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backGround60"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout style="@style/title_white_rl_style">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/small_title"
            style="@style/small_title_text_style" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/backGround60">
        <ImageView
            android:id="@+id/back"
           style="@style/title_left_black_back_style"/>

        <RelativeLayout
            android:layout_toRightOf="@id/back"
            style="@style/search_rl_bg_style"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_27">

            <com.mall.sls.common.widget.textview.ConventionalEditTextView
                android:id="@+id/goods_et"
                style="@style/login_input_phone_style"
                android:layout_marginLeft="@dimen/dp_15"
                android:hint="@string/enter_keyword"
                android:inputType="text"
                android:imeOptions="actionSearch"/>

            <ImageView
                android:id="@+id/close_iv"
                style="@style/search_close_iv_style" />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/history_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_8">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size15_app3_left_tv_style"
                android:text="@string/search_history" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/clear_history"
                style="@style/size14_app2_right_tv_style"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/clear_history" />
        </RelativeLayout>

        <com.mall.sls.common.widget.flowlayout.TagFlowLayout
            android:id="@+id/history_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:max_select="0"
            android:layout_marginLeft="@dimen/dp_7"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goods_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/backGround57"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/default_rl"
                style="@style/default_rl_style">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/default_tv"
                    style="@style/default_tv_style"
                    android:text="@string/select_default" />

                <ImageView
                    android:id="@+id/default_iv"
                    style="@style/default_down_style" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/price_ll"
                style="@style/default_rl_style"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/price_tv"
                        style="@style/default_tv_style"
                        android:text="@string/price" />

                    <ImageView
                        android:id="@+id/price_iv"
                        style="@style/default_down_style"
                        android:visibility="gone"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/price_arrow_iv"
                    style="@style/default_right_iv_style"
                    android:src="@mipmap/icon_up_down_arrow" />
                <ImageView
                    android:id="@+id/price_arrow"
                    style="@style/default_right_iv_style"
                    android:src="@drawable/up_down_select"
                    android:visibility="gone"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sales_rl"
                style="@style/default_rl_style">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/sales_tv"
                    style="@style/default_tv_style"
                    android:text="@string/sales" />

                <ImageView
                    android:id="@+id/sales_iv"
                    style="@style/default_down_style"
                    android:visibility="gone"/>

            </RelativeLayout>
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePreviewInEditMode="false"
            android:layout_marginTop="@dimen/dp_1">

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlAccentColor="@color/appText3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/record_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="@string/layoutManager_LinearLayout"
                    tools:listitem="@layout/adapter_goods_item" />
            </LinearLayout>

            <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/no_record_ll"
        style="@style/common_no_record_ll_style">

        <ImageView
            style="@style/common_no_record_iv_style"
            android:src="@mipmap/icon_no_search_goods" />

        <TextView
            style="@style/common_no_record_tv_style"
            android:text="@string/no_search_goods"
            android:layout_marginTop="@dimen/dp_92"/>
    </LinearLayout>

</LinearLayout>