<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround8">

    <LinearLayout style="@style/lottery_tip_rl_style">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51">

            <com.mall.sls.common.widget.textview.MediumThickTextView
                style="@style/size15_color_app3_text_style"
                android:layout_centerInParent="true"
                android:text="@string/get_times" />

            <ImageView
                android:id="@+id/close_iv"
                style="@style/lottery_tip_close_iv_style" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:textColor="@color/appText14"
                    android:textSize="@dimen/sp_15"
                    tools:text="jfdkjfd" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>