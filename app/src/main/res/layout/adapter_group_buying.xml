<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="@dimen/dp_84"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@drawable/common_four_back_fifty_seven_bg"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_iv"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_84"
            android:scaleType="centerCrop"
            tools:src="@mipmap/icon_default_goods"
            android:adjustViewBounds="true"
            app:riv_corner_radius_top_left="@dimen/dp_4"
            app:riv_corner_radius_top_right="@dimen/dp_4"
            app:riv_corner_radius_bottom_left="@dimen/dp_0"
            app:riv_corner_radius_bottom_right="@dimen/dp_0"
            app:riv_oval="false"
            tools:background="@null" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/goods_name"
            style="@style/small_goods_name_style"
            tools:text="电脑" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/yuan_symbol"
                style="@style/size10_color_app18_text_style"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="@string/yuan_symbol" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/current_price"
                style="@style/size12_color_app18_text_style"
                tools:text="1234" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.DrawTextView
            android:id="@+id/original_price"
            style="@style/size10_color_app2_text_style"
            tools:text="1234"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_2"/>
    </LinearLayout>

</LinearLayout>