<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGround6"
            android:orientation="vertical">

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_313"
                android:background="@color/appText2"
                app:AutoPlayTime="3000"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="true"
                app:numberIndicatorBacgroud="@drawable/banner_point_bg"
                app:pageChangeDuration="800"
                app:pointsPosition="RIGHT"
                app:tipTextColor="@color/appText1"
                app:tipTextSize="@dimen/sp_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:background="@color/backGround1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.mall.sls.common.widget.textview.MediumThickTextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textColor="@color/appText1"
                        android:textSize="@dimen/sp_25"
                        tools:text="¥25" />

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/goods_unit"
                        style="@style/size12_color_app1_text_style"
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_toRightOf="@id/current_price"
                        tools:text="/ 箱" />

                    <com.mall.sls.common.widget.textview.WhiteDrawTextView
                        android:id="@+id/original_price"
                        style="@style/size10_color_app1_text_style"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_toRightOf="@id/goods_unit"
                        tools:text="22" />
                </LinearLayout>

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/sales"
                    style="@style/size12_color_app1_text_style"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_6"
                    tools:text="累计销售" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/time_type"
                    style="@style/size12_color_app1_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_9"
                    android:layout_marginRight="@dimen/dp_6"
                    tools:text="@string/remaining_spike" />


                <com.mall.sls.common.widget.textview.DetailTearDownView
                    android:id="@+id/count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"/>

            </RelativeLayout>

            <LinearLayout style="@style/goods_detail_rl_style">

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/goods_name"
                    style="@style/goods_detail_left_tv_style"
                    android:textSize="@dimen/sp_15"
                    tools:text="香蕉" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sku_rl"
                style="@style/goods_detail_rl_style"
                android:layout_marginTop="@dimen/dp_6">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/selected_goods"
                    style="@style/goods_detail_left_tv_style"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toLeftOf="@id/right_arrow_iv"
                    tools:text="香蕉" />

                <ImageView
                    android:id="@+id/right_arrow_iv"
                    style="@style/black_right_arrow_style" />
            </RelativeLayout>

            <LinearLayout
                style="@style/goods_detail_rl_style"
                android:layout_marginTop="@dimen/dp_6"
                android:visibility="gone">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/delivery_time"
                    style="@style/goods_detail_left_tv_style"
                    tools:text="香蕉" />

            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_goods_details"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"/>
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_image_match_style"
            android:src="@mipmap/icon_detail_back" />

        <ImageView
            android:id="@+id/share"
            style="@style/title_right_image_match_style"
            android:src="@mipmap/icon_detail_share" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@color/appText1">

        <ImageView
            android:id="@+id/service_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/icon_detail_service" />

        <ImageView
            android:id="@+id/home_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_260"
            android:src="@mipmap/icon_detail_home" />

        <LinearLayout
            android:id="@+id/pinyin_ll"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/activity_buy_bt_select"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/tv"
               style="@style/size16_color_app1_text_style"
                android:text="@string/join_pinyin_now"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/size12_color_app1_text_style"
                    android:text="@string/surplus"/>
                <com.mall.sls.common.widget.textview.TwelveTearDownView
                    android:id="@+id/bottom_count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>