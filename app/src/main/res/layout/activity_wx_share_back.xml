<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">


        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="" />
    </RelativeLayout>

    <com.mall.sls.common.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appText1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_50"
                android:orientation="horizontal">

                <com.mall.sls.common.widget.textview.MSTearDownView
                    android:id="@+id/count_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/size14_color_app3_text_style"
                    android:layout_marginLeft="@dimen/dp_9"
                    android:text="后自动取消" />

            </LinearLayout>

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/surplus"
                style="@style/size16_color_app3_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_12"
                tools:text="还剩1人，快邀请好友拼单吧！" />

            <ImageView
                android:id="@+id/weixin_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_39"
                android:src="@mipmap/icon_wxback_up_bt" />

            <ImageView
                android:id="@+id/home_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/icon_wxback_down_bt" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_35"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/head_photo"
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@color/appText1"
                    app:riv_border_width="0dp"
                    app:riv_corner_radius="0dp"
                    app:riv_oval="true"
                    tools:background="@null"
                    tools:src="@mipmap/icon_defalut_head" />

                <ImageView
                    android:id="@+id/three_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/icon_three_clock" />

                <ImageView
                    android:layout_width="@dimen/dp_56"
                    android:layout_height="@dimen/dp_56"
                    android:src="@mipmap/icon_to_be_invited" />
            </LinearLayout>

        </LinearLayout>
    </com.mall.sls.common.widget.scrollview.ReboundScrollView>
</LinearLayout>