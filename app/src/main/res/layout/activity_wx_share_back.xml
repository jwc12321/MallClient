<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">
        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

    </RelativeLayout>

    <com.mall.sls.common.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/appText1"
            android:orientation="vertical">


            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/tip_title_style"
                android:text="@string/is_pay"
                android:layout_marginTop="@dimen/dp_49"/>

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/tip"
                style="@style/size16_color_app3_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_21"
                android:text="@string/invite_friend_for_reward" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_39"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/order_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_look_order" />
                <ImageView
                    android:id="@+id/weixin_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_wxback_up_bt"
                    android:visibility="gone"/>
            </RelativeLayout>


            <ImageView
                android:id="@+id/home_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/icon_wxback_down_bt" />
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/look_order"
                style="@style/size15_color_back1_text_style"
                android:text="@string/look_order_details"
                android:padding="@dimen/dp_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_59"/>
            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:visibility="gone"/>
        </LinearLayout>
    </com.mall.sls.common.widget.scrollview.ReboundScrollView>
</LinearLayout>