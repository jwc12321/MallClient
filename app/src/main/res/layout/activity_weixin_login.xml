<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appText1">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/login_register" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_92"
        android:src="@mipmap/icon_login_iv" />

    <com.mall.sls.common.widget.textview.MediumThickTextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:text="@string/app_name"
        android:textColor="@color/appText3"
        android:textSize="@dimen/sp_20" />

    <LinearLayout
        android:id="@+id/confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/tv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/confirm_bt_select"
        android:gravity="center">

        <com.mall.sls.common.widget.textview.MediumThickTextView
            style="@style/size16_color_app1_text_style"
            android:drawableLeft="@mipmap/icon_white_weixin"
            android:drawablePadding="@dimen/dp_6"
            android:text="@string/weixin_login_register" />
    </LinearLayout>

    <com.mall.sls.common.widget.textview.ConventionalTextView
        android:id="@+id/phone_login_bt"
        style="@style/size16_color_app3_text_style"
        android:layout_below="@id/confirm_bt"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_15"
        android:text="@string/phone_login" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_61"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/choice_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@drawable/login_tip_select"
            android:padding="@dimen/dp_6" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size12_color_app4_text_style"
            android:text="@string/i_read_agree" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/register_tv"
            style="@style/size12_color_back1_text_style"
            android:text="@string/registration_agreement" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size12_color_app4_text_style"
            android:text="@string/and" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/privacy_tv"
            style="@style/size12_color_back1_text_style"
            android:text="@string/privacy_policy" />
    </LinearLayout>
</RelativeLayout>