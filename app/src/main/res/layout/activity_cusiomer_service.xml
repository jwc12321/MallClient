<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginRight="@dimen/dp_44"
        android:background="@drawable/common_four_back_fifty_seven_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_iv"
            style="@style/box_close_iv_style" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_m_8"
            android:src="@mipmap/icon_service" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size16_color_app3_text_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/call_service" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/phone"
            style="@style/size16_color_back1_text_style"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_26"
            tools:text="1234567" />

    </LinearLayout>

</RelativeLayout>