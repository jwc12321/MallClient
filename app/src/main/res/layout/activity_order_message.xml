<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/small_title_rel"
        style="@style/title_red_rl_style">

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/small_title"
            style="@style/small_title_text_style" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style"
        android:layout_below="@id/small_title_rel">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/sys_message" />

        <ImageView
            android:id="@+id/right_iv"
            style="@style/title_right_image_match_style"
            android:src="@mipmap/icon_more" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rel"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/black" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/record_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false"
                    android:visibility="visible"
                    app:layoutManager="@string/layoutManager_LinearLayout"
                    tools:listitem="@layout/adapter_order_message"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"/>

                <LinearLayout
                    android:id="@+id/no_record_ll"
                    style="@style/common_no_record_ll_style"
                    android:visibility="gone">

                    <ImageView
                        style="@style/common_no_record_iv_style"
                        android:src="@mipmap/icon_no_goods" />

                    <TextView
                        style="@style/common_no_record_tv_style"
                        android:text="@string/no_data" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/clean_ll"
        android:layout_width="@dimen/dp_96"
        android:layout_height="wrap_content"
        android:background="@drawable/common_two_back_forty_one_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@id/title_rel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_m_14"
        android:visibility="gone">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/mark_read_tv"
            style="@style/size13_color_app1_text_style"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/mark_all_read"
            android:layout_width="match_parent"
            android:gravity="center"/>
        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/clean_tv"
            style="@style/size13_color_app1_text_style"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_9"
            android:text="@string/empty"
            android:layout_marginBottom="@dimen/dp_9"/>
    </LinearLayout>
</RelativeLayout>