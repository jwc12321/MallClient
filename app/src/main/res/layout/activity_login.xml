<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_login_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@drawable/ten_shadow_back_two_bg"
        android:orientation="vertical">

        <LinearLayout
            style="@style/login_input_rl_style"
            android:layout_marginTop="@dimen/dp_33"
            android:orientation="horizontal">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size16_color_app3_text_style"
                android:text="+86" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_19"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_21"
                android:background="@color/backGround4" />

            <com.mall.sls.common.widget.textview.ConventionalEditTextView
                android:id="@+id/phone_et"
                style="@style/login_input_phone_style"
                android:hint="@string/input_phone_number"
                android:inputType="number"
                android:maxLength="11" />
        </LinearLayout>

        <View
            style="@style/common_dividing_line_style"
            android:layout_marginTop="@dimen/dp_6" />

        <RelativeLayout
            style="@style/login_input_rl_style"
            android:layout_marginTop="@dimen/dp_13_5">

            <com.mall.sls.common.widget.textview.ConventionalEditTextView
                android:id="@+id/vcode_et"
                style="@style/login_input_phone_style"
                android:layout_toLeftOf="@id/send_vcode"
                android:hint="@string/input_vcode"
                android:inputType="numberPassword" />

            <com.mall.sls.common.widget.textview.ColdDownButton
                android:id="@+id/send_vcode"
                style="@style/cold_down_bt_style"
                android:text="@string/send_verification_code" />
        </RelativeLayout>

        <View
            style="@style/common_dividing_line_style"
            android:layout_marginTop="@dimen/dp_13_5" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/confirm_bt"
            style="@style/common_login_bt_style"
            android:layout_marginTop="@dimen/dp_73"
            android:text="@string/login" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_28">

            <View
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_1"
                android:background="@color/backGround4"
                android:layout_gravity="center_vertical"/>

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_color_app2_text_style"
                android:text="@string/other_login"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"/>
            <View
                android:layout_width="@dimen/dp_53"
                android:layout_height="@dimen/dp_1"
                android:background="@color/backGround4"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/login_weixin_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_login_weixin"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dp_21"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_40">
            <CheckBox
                android:id="@+id/choice_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/login_tip_select"
                android:padding="@dimen/dp_6"
                android:layout_gravity="center_vertical"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size12_color_app4_text_style"
                android:text="@string/i_read_agree"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/register_tv"
                style="@style/size12_color_back1_text_style"
                android:text="@string/registration_agreement"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size12_color_app4_text_style"
                android:text="@string/and"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/privacy_tv"
                style="@style/size12_color_back1_text_style"
                android:text="@string/privacy_policy"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>