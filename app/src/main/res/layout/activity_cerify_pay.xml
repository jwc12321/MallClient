<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/alipay_verify" />
    </RelativeLayout>

    <com.mall.sls.common.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/backGround57">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/cerify_pay_up_left_tv_style"
                    android:text="@string/goods_amount" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/amount"
                    style="@style/cerify_pay_up_right_tv_style"
                    tools:text="1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/backGround57">

                <ImageView
                    android:id="@+id/weixin_iv"
                    style="@style/cerify_pay_left_iv_style"
                    android:src="@mipmap/icon_pay_weixin" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/cerify_pay_down_left_tv_style"
                    android:layout_toRightOf="@id/weixin_iv"
                    android:text="@string/weixin_pay" />

                <ImageView
                    android:id="@+id/select_weixin_iv"
                    style="@style/cerify_pay_right_iv_style" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:background="@color/backGround57">

                <ImageView
                    android:id="@+id/ali_iv"
                    style="@style/cerify_pay_left_iv_style"
                    android:src="@mipmap/icon_pay_zhifubao" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/cerify_pay_down_left_tv_style"
                    android:layout_toRightOf="@id/ali_iv"
                    android:text="@string/ali_pay" />

                <ImageView
                    android:id="@+id/select_ali_iv"
                    style="@style/cerify_pay_right_iv_style" />
            </RelativeLayout>

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/confirm_bt"
                style="@style/common_next_bt_style"
                android:layout_marginTop="@dimen/dp_237"
                android:text="@string/to_pay" />
        </LinearLayout>
    </com.mall.sls.common.widget.scrollview.ReboundScrollView>
</LinearLayout>