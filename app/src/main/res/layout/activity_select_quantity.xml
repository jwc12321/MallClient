<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/all_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround8"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/backGround57"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/goods_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_122">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="@dimen/dp_82"
                android:layout_height="@dimen/dp_82"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_5"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/icon_close" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/goods_name"
                style="@style/size15_color_app3_text_style"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_29"
                android:layout_toRightOf="@id/goods_iv"
                android:layout_marginRight="@dimen/dp_48"
                tools:text="香蕉" />
        </RelativeLayout>

        <View style="@style/fifteen_back_nine_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_color_app4_text_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/redemption_times" />

            <LinearLayout
                style="@style/cir_confirm_order_number_ll_style"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/decrease_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:src="@mipmap/icon_number_reduce" />

                <RelativeLayout
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_26"
                    android:background="@drawable/common_two_back_two_two_bg">


                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/goods_count"
                        style="@style/cir_input_quantity_edittext_style"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/increase_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_15"
                    android:paddingRight="@dimen/dp_15"
                    android:src="@mipmap/icon_number_add" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/fifteen_back_nine_line_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:orientation="horizontal">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_color_app4_text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/remaining_times" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/remaining_times"
                style="@style/size14_color_back1_text_style"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                tools:text="55555" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_color_app4_text_style"
                android:layout_gravity="center_vertical"
                android:text="@string/times" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/confirm_bt"
            style="@style/bottom_bt_style"
            android:text="@string/confirm" />
    </LinearLayout>
</RelativeLayout>