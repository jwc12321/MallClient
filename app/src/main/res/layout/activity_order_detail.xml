<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/backGround1" />

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/order_detail" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rel"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/white"
            app:srlEnableLastTime="true"
            app:srlPrimaryColor="@color/backGround8" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backGround6"
                android:orientation="vertical">

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/order_status"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:background="@color/backGround1"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_15"
                    android:paddingLeft="@dimen/dp_15"
                    android:textColor="@color/appText1"
                    android:textSize="@dimen/sp_16"
                    tools:text="已签收" />

                <LinearLayout
                    android:id="@+id/count_down_ll"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_51"
                    android:background="@color/backGround1"
                    android:visibility="gone">

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/remaining_payment_time_tv"
                        style="@style/size15_color_app1_text_style"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        tools:text="@string/remaining_payment_time" />

                    <com.mall.sls.common.widget.textview.MSTearDownView
                        android:id="@+id/count_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/day_tv"
                        style="@style/size15_color_app1_text_style"
                        tools:text="天"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/common_four_app_one_bg">

                        <com.mall.sls.common.widget.textview.ConventionalTextView
                            android:id="@+id/address_tv"
                            style="@style/size14_color_app3_text_style"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/receipt_address" />

                        <com.mall.sls.common.widget.textview.ConventionalTextView
                            android:id="@+id/name_phone"
                            style="@style/size14_color_app3_text_style"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_toRightOf="@id/address_tv"
                            tools:text="2019-09-09" />

                        <com.mall.sls.common.widget.textview.ConventionalTextView
                            android:id="@+id/receipt_address"
                            style="@style/size14_color_app3_text_style"
                            android:layout_below="@id/name_phone"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="@dimen/dp_3"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:layout_toRightOf="@id/address_tv"
                            tools:text="2019-09-09" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/common_four_app_one_bg"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_87"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_21">

                            <ImageView
                                android:id="@+id/goods_iv"
                                android:layout_width="@dimen/dp_87"
                                android:layout_height="@dimen/dp_87"
                                android:scaleType="fitXY"
                                tools:src="@mipmap/ic_launcher" />

                            <com.mall.sls.common.widget.textview.MediumThickTextView
                                android:id="@+id/goods_name"
                                style="@style/size14_color_app3_text_style"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:layout_toRightOf="@id/goods_iv"
                                tools:text="香蕉" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/sku"
                                style="@style/size13_color_app2_text_style"
                                android:layout_below="@id/goods_name"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_toRightOf="@id/goods_iv"
                                tools:text="黑色" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="@dimen/dp_6"
                                android:layout_toRightOf="@id/goods_iv">

                                <com.mall.sls.common.widget.textview.ConventionalTextView
                                    android:id="@+id/goods_price"
                                    style="@style/size14_color_back1_text_style"
                                    android:layout_centerVertical="true"
                                    tools:text="59" />

                                <com.mall.sls.common.widget.textview.ConventionalTextView
                                    android:id="@+id/goods_number"
                                    style="@style/size12_color_app4_text_style"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    tools:text="x1" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <View style="@style/fifteen_back_nine_line_style" />

                        <RelativeLayout
                            style="@style/order_detail_tv_rl_style"
                            android:layout_marginTop="@dimen/dp_7">

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                style="@style/order_detail_left_tv_style"
                                android:text="@string/commodity_price" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/total_amount"
                                style="@style/order_detail_right_tv_style"
                                tools:text="11111" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/order_detail_tv_rl_style"
                            android:layout_marginTop="@dimen/dp_7">

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                style="@style/order_detail_left_tv_style"
                                android:text="@string/delivery_fee" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/delivery_fee"
                                style="@style/order_detail_right_tv_style"
                                tools:text="11111" />
                        </RelativeLayout>

                        <RelativeLayout
                            style="@style/order_detail_tv_rl_style"
                            android:layout_marginTop="@dimen/dp_7">

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                style="@style/order_detail_left_tv_style"
                                android:text="@string/coupon" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/coupon"
                                style="@style/order_detail_right_tv_style"
                                tools:text="11111" />
                        </RelativeLayout>

                        <View
                            style="@style/fifteen_back_nine_line_style"
                            android:layout_marginTop="@dimen/dp_7" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/dp_15"
                            android:orientation="horizontal">

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/is_pay"
                                style="@style/size12_color_app3_text_style"
                                android:layout_gravity="center_vertical"
                                tools:text="@string/real_payment" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                android:id="@+id/real_payment"
                                style="@style/size16_color_back1_text_style"
                                tools:text="11111" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_54"
                        android:background="@drawable/common_four_app_one_bg"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="@dimen/dp_3"
                                android:layout_height="@dimen/dp_15"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_15"
                                android:background="@color/backGround1" />

                            <com.mall.sls.common.widget.textview.ConventionalTextView
                                style="@style/size14_color_app3_text_style"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp_4"
                                android:text="@string/order_info" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/info_rv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_1"
                            android:layout_marginBottom="@dimen/dp_7"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical"
                            app:layoutManager="@string/layoutManager_LinearLayout"
                            tools:listitem="@layout/adapter_order_information" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/bt_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@color/appText1"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/left_bt"
                style="@style/order_detail_left_bt_style"
                tools:text="拼团详情" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/right_bt"
                style="@style/order_detail_right_bt_style"
                tools:text="邀请好友" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>