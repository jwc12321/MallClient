<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/common_four_app_one_bg">

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_102"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/goods_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/groupType"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/activity_team_bg"
                android:gravity="center"
                tools:text="@string/activity_group"
                android:textColor="@color/appText1"
                android:textSize="@dimen/sp_10" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/goods_name"
                style="@style/size14_color_app3_text_style"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="千禧圣女果1份500g" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/goods_introduction"
            style="@style/size12_color_app2_text_style"
            android:layout_below="@id/goods_name_rl"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="脆甜小果子桃醉你付款的肌肤的JFK的肌肤肌肤的空间就付款的肌肤的JFK的肌肤的就付款的肌肤的的心" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/goods_iv"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_14">

            <LinearLayout
                android:id="@+id/current_price_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/price_type"
                    style="@style/size12_color_back1_text_style"
                    tools:text="@string/group_purchase_price_tv"
                    android:layout_gravity="center_vertical"/>

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/current_price"
                    style="@style/size15_color_back1_text_style"
                    android:layout_marginLeft="@dimen/dp_8"
                    tools:text="222222" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/current_price_rl">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/size12_color_app2_text_style"
                    android:text="@string/market_price"
                    android:layout_gravity="center_vertical"/>

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/original_price"
                    style="@style/size12_color_app2_text_style"
                    android:layout_marginLeft="@dimen/dp_8"
                    tools:text="1111111" />
            </LinearLayout>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/confirm_bt"
                style="@style/go_spell_bt_style"
                android:layout_marginRight="@dimen/dp_15"
                android:text="@string/go_spell"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>