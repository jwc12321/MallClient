<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/backGround1" />

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/small_"
            style="@style/title_small_text_style" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/local_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@id/title_rel"
        android:background="@color/backGround1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:src="@mipmap/icon_home_location" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/local_city"
            style="@style/size15_color_app1_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_39"
            tools:text="杭州市" />

        <RelativeLayout
            android:id="@+id/message_rl"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_32"
                android:src="@mipmap/icon_home_message"
                android:layout_alignParentRight="true"/>

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/message_count"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/home_message_number_bg"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/appText1"
                android:textSize="@dimen/sp_10"
                tools:text="99+" />
        </RelativeLayout>

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/local_rl"
        app:srlEnablePreviewInEditMode="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@android:color/white"
            app:srlEnableLastTime="true"
            app:srlPrimaryColor="@color/backGround8" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/backGround6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backGround1"
                    android:orientation="horizontal">

                    <com.stx.xhb.androidx.XBanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_167"
                        android:layout_margin="@dimen/dp_15"
                        android:background="@color/appText2"
                        app:AutoPlayTime="3000"
                        app:isHandLoop="true"
                        app:isShowIndicatorOnlyOne="true"
                        app:pageChangeDuration="800"
                        app:pointNormal="@drawable/pointnormal_bg"
                        app:pointSelect="@drawable/pointselect_bg"
                        app:pointsPosition="CENTER" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_5">

                    <com.mall.sls.common.widget.textview.MediumThickTextView
                        android:id="@+id/selected_group_tv"
                        style="@style/size16_color_back1_text_style"
                        android:layout_centerInParent="true"
                        android:text="@string/selected_group" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@id/selected_group_tv"
                        android:src="@mipmap/icon_left_red_line" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@id/selected_group_tv"
                        android:src="@mipmap/icon_right_red_line" />

                    <ImageView
                        android:id="@+id/more_right_arrow_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_14"
                        android:src="@mipmap/icon_more_right_arrow" />
                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/other_more_tv"
                        style="@style/size12_color_back1_text_style"
                        android:layout_centerInParent="true"
                        android:text="@string/more"
                        android:layout_toLeftOf="@id/more_right_arrow_iv"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/dp_3"
                        android:paddingLeft="@dimen/dp_10"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/goods_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="@string/layoutManager_LinearLayout"
                    tools:listitem="@layout/adapter_goods_item" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>