<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_62">

    <com.mall.sls.common.widget.textview.ConventionalTextView
        android:id="@+id/content"
        style="@style/size13_color_app3_text_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        tools:text="购物积分—实付1200" />

    <com.mall.sls.common.widget.textview.ConventionalTextView
        android:id="@+id/price"
        style="@style/size13_color_back1_text_style"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentRight="true"
        tools:text="+1200" />
    <com.mall.sls.common.widget.textview.ConventionalTextView
        android:id="@+id/time"
        style="@style/size12_color_app2_text_style"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="2020.10.21"
        android:layout_below="@id/content"/>
    <View
       style="@style/fifteen_back_nine_line_style"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>