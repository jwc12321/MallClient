<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/cart" />
    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rel"
        android:layout_marginBottom="@dimen/dp_47"
        app:srlEnablePreviewInEditMode="false"
        android:layout_marginTop="@dimen/dp_1">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/appText3"
            app:srlEnableLastTime="true"
            app:srlPrimaryColor="@color/backGround8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGround6"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layoutManager="@string/layoutManager_LinearLayout"
                tools:listitem="@layout/adapter_normal_cart_item" />
        </LinearLayout>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/statistics_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_alignParentBottom="true"
        android:background="@color/backGround57"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/select_all"
            style="@style/cart_checkbox_style"/>

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size14_color_app3_text_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_1"
            android:layout_toRightOf="@id/select_all"
            android:text="@string/select_all" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/confirm_bt"
            android:layout_width="@dimen/dp_93"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/cart_confirm_bt_select"
            android:gravity="center"
            android:text="@string/settlement"
            android:textColor="@color/appText1"
            android:textSize="@dimen/sp_14" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/total_price"
            style="@style/size17_color_back1_text_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@id/confirm_bt"
            tools:text="1111" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size14_color_app3_text_style"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/total_price"
            android:text="@string/total" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/no_record_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rel"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_74"
            android:src="@mipmap/icon_cart_no_item" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size11_color_app2_text_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/cart_empty" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/no_record_bt"
            style="@style/common_next_bt_style"
            android:layout_marginTop="@dimen/dp_146"
            android:text="@string/go_shopping" />
    </LinearLayout>
</RelativeLayout>