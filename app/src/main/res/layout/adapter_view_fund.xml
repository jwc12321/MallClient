<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/common_two_back_fifty_seven_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@color/backGround86">

            <View
                android:id="@+id/black_view"
                android:layout_width="@dimen/dp_3"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@color/backGround58" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/refund_number_tv"
                style="@style/size14_color_app2_text_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/black_view"
                android:text="@string/refund_number" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/refund_number"
                style="@style/size14_color_app2_text_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toRightOf="@id/refund_number_tv"
                tools:text="111111111" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/status"
                style="@style/size15_app3_app26_margin10_right_tv_style"
                tools:text="退款成功" />
        </RelativeLayout>
        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/fund_tip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="@color/backGround86"
            android:text="@string/view_fund_tip"
            android:textColor="@color/appText26"
            android:textSize="@dimen/sp_12"
            android:gravity="end"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_2"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_7">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_app2_margin15_left_tv_style"
                android:text="@string/refund_amount" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/refund_amount"
                style="@style/size15_back1_margin15_right_tv_style"
                tools:text="1111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size14_app2_margin15_left_tv_style"
                android:text="@string/starting_time" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/starting_time"
                style="@style/size12_app3_margin15_right_tv_style"
                tools:text="1111" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginBottom="@dimen/dp_7">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/arrival_time_tv"
                style="@style/size14_app2_margin15_left_tv_style"
                tools:text="@string/arrival_time" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/arrival_time"
                style="@style/size12_app3_margin15_right_tv_style"
                tools:text="1111" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>