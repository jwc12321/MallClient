<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_black_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/authentication" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_rel"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout style="@style/back57_ll_style">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/phone_tip"
                style="@style/size15_color_app4_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_33"
                tools:text="本次操作需要短信确认，请输入\n159****7651收到的短信校验码" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginTop="@dimen/dp_43">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/sms_code_tv"
                    style="@style/add_address_left_tv_style"
                    android:layout_centerVertical="true"
                    android:text="@string/v_code" />

                <com.mall.sls.common.widget.textview.ConventionalEditTextView
                    android:id="@+id/sms_code_et"
                    style="@style/address_et_style"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_toRightOf="@id/sms_code_tv"
                    android:hint="@string/input_check_code"
                    android:inputType="number" />
                <com.mall.sls.common.widget.textview.ColdDownButton
                    android:id="@+id/send_v_code"
                    style="@style/cold_down_bt_style"
                    android:text="@string/send_verification_code"
                    android:layout_marginRight="@dimen/dp_15"/>
            </RelativeLayout>

            <View style="@style/fifteen_back_nine_line_style" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/confirm_bt"
                style="@style/common_four_next_bt_style"
                android:layout_marginTop="@dimen/dp_29"
                android:text="@string/next"
                android:enabled="false"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/no_receive_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/backGround1"
                android:text="@string/can_not_receive_check_code_question"
                android:padding="@dimen/dp_14"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_161"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>