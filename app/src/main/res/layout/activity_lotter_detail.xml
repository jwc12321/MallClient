<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_49"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGround6"
            android:orientation="vertical">

            <com.stx.xhb.androidx.XBanner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_313"
                android:background="@color/appText1"
                app:AutoPlayTime="5000"
                app:isHandLoop="true"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="true"
                app:numberIndicatorBacgroud="@drawable/banner_point_bg"
                app:pageChangeDuration="800"
                app:pointsPosition="RIGHT"
                app:tipTextColor="@color/appText1"
                app:tipTextSize="@dimen/sp_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_62"
                android:background="@color/backGround1">

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/goods_price"
                    style="@style/size22_color_app1_text_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    tools:text="1111111" />

                <LinearLayout
                    android:id="@+id/count_down_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        style="@style/size14_color_app1_text_style"
                        android:text="@string/lottery_count_down" />

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        style="@style/size14_color_app1_text_style"
                        android:id="@+id/day_tv"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone"
                        tools:text="12天" />

                    <com.mall.sls.common.widget.textview.CommonTearDownView
                        android:id="@+id/count_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:viewTextSize="@dimen/sp_14"
                        app:viewTextColor="@color/appText1"
                        app:colonType="1"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_86"
                android:background="@color/backGround57">

                <com.mall.sls.common.widget.textview.MediumThickTextView
                    android:id="@+id/goods_name"
                    style="@style/size15_color_app3_text_style"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    tools:text="1111" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/prizeTime"
                    style="@style/size14_color_app2_text_style"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    tools:text="2019" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/participantNumber"
                    style="@style/size14_color_app2_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_10"
                    tools:text="2019人"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/icon_goods_details" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/title_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGround8">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_image_match_style"
            android:src="@mipmap/icon_detail_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_alignParentBottom="true"
        android:background="@color/backGround57">

        <ImageView
            android:id="@+id/home_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/confirm_bt"
            android:src="@mipmap/icon_detail_home" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/confirm_bt"
            style="@style/lottery_goods_detail_bottom_bt_style"
            tools:text="@string/go_buy" />
    </RelativeLayout>
</RelativeLayout>