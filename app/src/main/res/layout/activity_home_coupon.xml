<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround8"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_27"
        android:layout_marginRight="@dimen/dp_27"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/icon_home_coupon_up" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_272"
            android:background="@mipmap/icon_home_coupon_down"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/close_iv"
                style="@style/right_white_close_iv_style" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/congratulations_getting"
                style="@style/size16_color_app1_text_style"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/congratulations_getting" />
            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/coupon_number"
                style="@style/size14_color_app1_text_style"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_4"
                tools:text="2张优惠券"
                android:layout_below="@id/congratulations_getting"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/record_rv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_175"
                app:layoutManager="@string/layoutManager_LinearLayout"
                tools:listitem="@layout/adapter_home_coupon_receive"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_below="@id/coupon_number"/>
            <com.mall.sls.common.widget.textview.MediumThickTextView
                style="@style/size14_color_app1_text_style"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/view_coupon" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>