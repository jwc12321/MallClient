<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/about" />
    </RelativeLayout>

    <com.mall.sls.common.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_59"
                android:src="@mipmap/app_icon" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size16_color_app4_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/app_name" />

            <LinearLayout
               style="@style/back57_ll_style"
                android:layout_marginTop="@dimen/dp_59">

                <RelativeLayout
                    style="@style/height49_rl_style">

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        style="@style/setting_left_tv_style"
                        android:text="@string/current_version" />

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/current_version"
                        style="@style/setting_right_tv_style"
                        android:layout_marginRight="@dimen/dp_15" />
                </RelativeLayout>

                <View style="@style/fifteen_back_nine_line_style" />

                <RelativeLayout
                    android:id="@+id/update_rl"
                    style="@style/height49_rl_style">

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        style="@style/setting_left_tv_style"
                        android:text="@string/check_updates" />

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/new_version"
                        style="@style/setting_right_tv_style"
                        android:text="new"
                        android:textColor="@color/backGround1"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/right_arrow_iv"
                        style="@style/big_black_arrow_back_style" />

                    <com.mall.sls.common.widget.textview.ConventionalTextView
                        android:id="@+id/last_version"
                        style="@style/setting_right_tv_style"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="@string/is_last_version"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </com.mall.sls.common.widget.scrollview.ReboundScrollView>
</LinearLayout>