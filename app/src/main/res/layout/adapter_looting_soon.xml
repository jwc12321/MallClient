<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@drawable/common_four_back_fifty_seven_bg">

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <com.mall.sls.common.widget.textview.GoodsTypeTextView
            android:id="@+id/goods_name"
            style="@style/size14_color_app3_text_style"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="fjkdjfdkjfd"
            android:gravity="top"
            android:layout_marginTop="@dimen/dp_8"/>


        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/goods_brief"
            style="@style/size10_color_app2_text_style"
            android:layout_below="@id/goods_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="脆甜小果子桃醉你付款的肌肤的JFK的肌肤肌肤的空间就付款的肌肤的JFK的肌肤的就付款的肌肤的的心" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/goods_iv">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/yuan_symbol"
                style="@style/size10_color_app18_text_style"
                android:text="@string/yuan_symbol" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/current_price"
                style="@style/size13_color_app18_text_style"
                tools:text="1234" />

            <com.mall.sls.common.widget.textview.DrawTextView
                android:id="@+id/original_price"
                style="@style/size11_color_app2_text_style"
                android:layout_marginLeft="@dimen/dp_15"
                tools:text="1234" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/confirm_bt"
            style="@style/list_go_spell_bt_style"
            android:layout_marginRight="@dimen/dp_15"
            android:text="@string/go_spell"
            android:textSize="@dimen/sp_11"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>

</LinearLayout>