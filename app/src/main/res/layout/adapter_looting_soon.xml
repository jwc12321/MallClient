<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/appText1">

        <ImageView
            android:id="@+id/goods_iv"
            android:layout_width="@dimen/dp_102"
            android:layout_height="@dimen/dp_102"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:scaleType="fitXY"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:id="@+id/goods_name_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_4"
                android:background="@drawable/activity_team_bg"
                android:gravity="center"
                android:text="@string/activity_group"
                android:textColor="@color/appText1"
                android:textSize="@dimen/sp_10" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/goods_name"
                style="@style/size15_color_app3_text_style"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="苹果" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/goods_introduction"
            style="@style/size12_color_app2_text_style"
            android:layout_below="@id/goods_name_rl"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toRightOf="@id/goods_iv"
            tools:text="脆甜小果子桃醉你的心" />


        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/confirm_bt"
            style="@style/go_spell_bt_style"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_17"
            tools:text="@string/go_spell"
            android:textSize="@dimen/sp_11"/>

        <LinearLayout
            android:id="@+id/price_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_toRightOf="@id/goods_iv"
            android:orientation="vertical">

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/current_price"
                style="@style/size17_color_back1_text_style"
                tools:text="59" />

            <com.mall.sls.common.widget.textview.DrawTextView
                android:id="@+id/original_price"
                style="@style/size10_color_app2_text_style"
                tools:text="79" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_toRightOf="@id/price_ll"
            android:orientation="vertical">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/group_purchase_price_iv_style"
                android:text="@string/activity_price" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size10_color_app2_text_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_4"
                android:text="@string/market_price" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>