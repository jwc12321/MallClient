<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_ll"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:background="@drawable/common_four_back_fifty_seven_bg"
        android:layout_marginBottom="@dimen/dp_12">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goods_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_165"
            android:scaleType="centerCrop"
            tools:src="@mipmap/icon_default_goods"
            android:adjustViewBounds="true"
            app:riv_corner_radius_top_left="@dimen/dp_4"
            app:riv_corner_radius_top_right="@dimen/dp_4"
            app:riv_corner_radius_bottom_left="@dimen/dp_0"
            app:riv_corner_radius_bottom_right="@dimen/dp_0"
            app:riv_oval="false"
            tools:background="@null" />

        <LinearLayout
            android:id="@+id/goods_name_rl"
            style="@style/grid_goods_name_ll_style">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/group_type"
                style="@style/grid_group_type_tv_style"
                tools:text="@string/activity_group" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/goods_name"
                style="@style/grid_goods_name_tv_style"
                tools:text="千禧圣女果1份500g" />
        </LinearLayout>

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/goods_subtitle_name"
            style="@style/grid_goods_brief_tv_style"
            tools:text="R9-4900HS RTX 2060MQ" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_12">
            <com.mall.sls.common.widget.textview.ConventionalTextView
                style="@style/size10_color_app18_text_style"
                android:text="@string/yuan_symbol"/>
            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/current_price"
                style="@style/size12_color_app18_text_style"
                tools:text="1234"
                android:layout_marginLeft="@dimen/dp_2"/>
            <com.mall.sls.common.widget.textview.DrawTextView
                android:id="@+id/original_price"
                style="@style/size10_color_app2_text_style"
                tools:text="1234"
                android:layout_marginLeft="@dimen/dp_15"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>