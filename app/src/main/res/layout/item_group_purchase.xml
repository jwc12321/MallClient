<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout style="@style/goods_detail_rl_style">

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_up_phone_number"
            style="@style/goods_detail_left_tv_style"
            tools:text="7787878" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_up_spell_bt"
            style="@style/goods_detail_go_spell_bt_style"
            android:text="@string/go_spell" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_up_poor_tv"
            style="@style/size12_color_app3_text_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/list_up_spell_bt"
            tools:text="还差几人" />
    </RelativeLayout>

    <RelativeLayout style="@style/goods_detail_rl_style">

        <View style="@style/fifteen_back_nine_line_style" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_down_phone_number"
            style="@style/goods_detail_left_tv_style"
            tools:text="7787878" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_down_spell_bt"
            style="@style/goods_detail_go_spell_bt_style"
            android:text="@string/go_spell" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/list_down_poor_tv"
            style="@style/size12_color_app3_text_style"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@id/list_down_spell_bt"
            tools:text="还差几人" />
    </RelativeLayout>
</LinearLayout>