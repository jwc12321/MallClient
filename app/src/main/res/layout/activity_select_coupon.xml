<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backGround6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_rel"
        style="@style/title_red_rl_style">

        <ImageView
            android:id="@+id/back"
            style="@style/title_left_back_style" />

        <com.mall.sls.common.widget.textview.MediumThickTextView
            android:id="@+id/title"
            style="@style/title_text_style"
            android:text="@string/select_coupon" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/no_coupons_ll"
        android:layout_below="@id/title_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/appText1">
        <ImageView
            android:id="@+id/select_weixin_iv"
            style="@style/cerify_pay_right_iv_style"
            android:layout_marginRight="@dimen/dp_42"/>
        <com.mall.sls.common.widget.textview.MediumThickTextView
           style="@style/size15_color_app3_text_style"
            android:text="@string/no_coupons"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <com.mall.sls.common.widget.scrollview.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:layout_below="@id/no_coupons_ll"
        android:layout_marginBottom="@dimen/dp_49">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/record_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:nestedScrollingEnabled="false"
                app:layoutManager="@string/layoutManager_LinearLayout"
                tools:listitem="@layout/adapter_select_coupon"
                android:layout_marginBottom="@dimen/dp_14"
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_15"/>
        </LinearLayout>
    </com.mall.sls.common.widget.scrollview.ReboundScrollView>
    <com.mall.sls.common.widget.textview.MediumThickTextView
        android:id="@+id/confirm_bt"
        style="@style/bottom_bt_style"
        android:text="@string/confirm" />
</RelativeLayout>