<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/head_photo"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_30"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            app:riv_border_color="@color/appText1"
            app:riv_border_width="0dp"
            app:riv_corner_radius="0dp"
            app:riv_oval="true"
            tools:background="@null"
            android:layout_centerVertical="true"/>
        <com.mall.sls.common.widget.textview.ConventionalTextView
            style="@style/size15_color_app2_text_style"
            android:layout_marginLeft="@dimen/dp_9"
            android:id="@+id/phone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_photo"
            tools:text="111111"/>
        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/invitation_text_select"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_31"
            android:layout_centerVertical="true"
            tools:text="未认证"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_toLeftOf="@id/status_tv"
            android:layout_marginRight="@dimen/dp_9"
            android:layout_centerVertical="true"
            android:src="@drawable/invite_auth_select"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>