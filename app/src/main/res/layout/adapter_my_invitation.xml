<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@color/appText1"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/head_photo"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_28"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                app:riv_border_color="@color/appText1"
                app:riv_border_width="0dp"
                app:riv_corner_radius="0dp"
                app:riv_oval="true"
                tools:background="@null" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/phone"
                style="@style/size15_color_app3_text_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_9"
                android:layout_toRightOf="@id/head_photo"
                tools:text="111111" />

            <ImageView
                android:id="@+id/down_iv"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/up_down_select" />

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/status_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toLeftOf="@id/down_iv"
                android:textColor="@drawable/invitation_text_select"
                android:textSize="@dimen/sp_12"
                tools:text="未认证" />

            <ImageView
                android:id="@+id/status_iv"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_9"
                android:layout_toLeftOf="@id/status_tv"
                android:src="@drawable/invite_auth_select"
                android:visibility="gone"/>
        </RelativeLayout>
        <View
            android:id="@+id/line"
          style="@style/fifteen_back_nine_line_style"
            android:visibility="invisible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/record_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:nestedScrollingEnabled="false"
            app:layoutManager="@string/layoutManager_LinearLayout"
            tools:listitem="@layout/adapter_my_invitation_item"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>