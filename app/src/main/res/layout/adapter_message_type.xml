<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@color/backGround60">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        tools:src="@mipmap/icon_message_order" />

    <ImageView
        android:id="@+id/right_arrow_iv"
        style="@style/big_black_arrow_back_style" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_toRightOf="@id/icon"
        android:gravity="center_vertical">
        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/title"
            style="@style/size15_color_app3_text_style"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="标题" />

        <com.mall.sls.common.widget.textview.ConventionalTextView
            android:id="@+id/content"
            style="@style/size12_color_app2_text_style"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="标题" />
    </LinearLayout>


    <View
        style="@style/fifteen_back_nine_line_style"
        android:layout_alignParentBottom="true" />
</RelativeLayout>