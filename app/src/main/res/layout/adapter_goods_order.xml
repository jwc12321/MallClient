<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_ll"
        style="@style/four_ll_style"
        android:layout_marginTop="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37">

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/time"
                style="@style/size12_color_app4_text_style"
                android:layout_marginLeft="@dimen/dp_15"
                tools:text="2090-89-88"
                android:layout_centerVertical="true"/>

            <com.mall.sls.common.widget.textview.ConventionalTextView
                android:id="@+id/order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/bottom_text_select"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                tools:text="待配送"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <View
            style="@style/fifteen_back_nine_line_style"
            android:layout_marginTop="@dimen/dp_5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_87"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">

            <ImageView
                android:id="@+id/goods_iv"
                android:layout_width="@dimen/dp_87"
                android:layout_height="@dimen/dp_87"
                android:scaleType="fitXY"
                tools:src="@mipmap/ic_launcher" />

            <com.mall.sls.common.widget.textview.MediumThickTextView
                android:id="@+id/goods_name"
                style="@style/size14_color_app3_text_style"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/goods_iv"
                tools:text="香蕉" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_38"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/goods_iv">

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/goods_price"
                    style="@style/size14_color_back1_text_style"
                    android:layout_centerVertical="true"
                    tools:text="59" />

                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/goods_number"
                    style="@style/size12_color_app4_text_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:text="x1" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/total_number"
                   style="@style/size14_color_app3_text_style"
                    tools:text="共1件"/>
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/is_pay"
                    style="@style/size14_color_app3_text_style"
                    tools:text="@string/to_be_paid"
                    android:layout_marginLeft="@dimen/dp_8"/>
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    android:id="@+id/total_amount"
                    style="@style/size14_color_back1_text_style"
                    tools:text="1111" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/bt_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_42"
            android:orientation="vertical">
            <View
                style="@style/fifteen_back_nine_line_style"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/dp_15">
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/order_left_bt_style"
                    android:id="@+id/left_bt"
                    tools:text="拼团详情"/>
                <com.mall.sls.common.widget.textview.ConventionalTextView
                    style="@style/order_right_bt_style"
                    android:id="@+id/right_bt"
                    tools:text="邀请好友"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>